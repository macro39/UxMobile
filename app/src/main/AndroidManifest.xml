<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.blog.korn123.easydiary">

    <application
        android:name=".helper.EasyDiaryApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.DiaryMainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label=""
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".activities.WebViewActivity"
            android:label="Licenses"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="me.blog.korn123.easydiary.activities.DiaryInsertActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="me.blog.korn123.easydiary.activities.DiaryReadActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="me.blog.korn123.easydiary.activities.DiaryUpdateActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".googledrive.GoogleDriveUploader"/>
        <activity android:name=".googledrive.GoogleDriveDownloader"/>
        <activity
            android:name=".activities.BarChartActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.CalendarActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activities.DiaryLockActivity"/>
        <activity android:name=".activities.LockSettingActivity"/>
        <activity
            android:name=".activities.PhotoViewPagerActivity"
            android:hardwareAccelerated="false"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.PostCardActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.ColorPickerActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.TimelineActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>