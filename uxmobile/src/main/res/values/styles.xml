<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Base" parent="Theme.MaterialComponents">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimary">@color/grey</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:buttonTint" tools:targetApi="lollipop">@color/black</item>
    </style>

    <style name="TextView.Base" parent="Theme.Base">
        <item name="android:padding">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>

    <style name="TextView.Title" parent="TextView.Base">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <!--        <item name="android:textAllCaps">true</item>-->
    </style>

    <style name="TextView.Description" parent="TextView.Base">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextView.Order" parent="TextView.Base">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Button.Float.Widget" parent="Theme.Base">
        <item name="android:padding">5sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Base" parent="Theme.Base">
        <item name="android:padding">5sp</item>
        <item name="android:layout_marginBottom">20sp</item>
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:layout_marginEnd">20sp</item>
        <item name="android:layout_marginRight">20sp</item>
    </style>
</resources>
